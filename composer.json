{
    "name": "perpetuum/telegram-bot-client",
    "description": "PHP library to easily interact with Telegram Bot API",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Perpetuum\\TelegramBotClient\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Aleksandr Mikheev"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3",
        "ext-curl": "*",
        "psr/log": "^3.0.2",
        "cuyz/valinor": "^1.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1.2",
        "symfony/var-dumper": "^7.2",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1.11",
        "rector/rector": "^2.0.11",
        "icanhazstring/composer-unused": "^0.9.2",
        "maglnet/composer-require-checker": "^4.16.1"
    }
}
